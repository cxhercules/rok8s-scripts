#!/bin/bash
# aws-get-secrets

. k8s-read-config

echo "Getting AWS Secrets and setting environment variables"
for SECRETS_FILE in "${AWS_SECRETS_FILES[@]}"
do
    while read secret; do
        secret_value=$(aws secretsmanager get-secret-value --secret-id docker-sudermanjr  --region us-east-2 | jq -r  .SecretString | jq -r .$secret)
        echo "Setting $secret"
        export $secret=$secret_value
    done <$SECRETS_FILE
done

